style.
    html, body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        font-size: 16px;
    }

    .container {
        position: relative;
        left: 30%;
        width: 40%;
    }

    .container > a > code > span:hover {
        color: red;
    }

h1(style="text-align: center;") #{title}

.container
    a(href="/about")
        code
            span(style="float: left;") /about
            span(style="float: right;") The example about page
            br
    a(href="/api/employees")
        code
            span(style="float: left;") /api/employees
            span(style="float: right;") Full mock employee API
            br
    a(href="/api/employees?id=0")
        code
            span(style="float: left;") /api/employees?id=0
            span(style="float: right;") First employee in the object
            br
    a(href="/api/employees?id=1")
        code
            span(style="float: left;") /api/employees?id=1
            span(style="float: right;") Second employee in the object
            br
    a(href="/api/employees?id=2")
        code
            span(style="float: left;") /api/employees?id=2
            span(style="float: right;") Gives an error because this employee doesn't exist